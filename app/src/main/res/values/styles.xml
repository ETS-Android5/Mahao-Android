<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Mahao.FormTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxCornerRadiusTopStart">@dimen/size_8</item>
        <item name="boxCornerRadiusTopEnd">@dimen/size_8</item>
        <item name="boxCornerRadiusBottomStart">@dimen/size_8</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/size_8</item>
        <item name="boxBackgroundColor">@color/color_background_gray</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

    <style name="Theme.Mahao.FormButton" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/text_18</item>
        <item name="android:paddingTop">@dimen/size_8</item>
        <item name="android:paddingBottom">@dimen/size_8</item>
        <item name="android:textColor">?colorOnSurface</item>
        <item name="android:foreground">@drawable/round_background</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="Theme.Mahao.MoreText" parent="Widget.AppCompat.TextView">
        <item name="android:paddingTop">@dimen/size_16</item>
        <item name="android:paddingBottom">@dimen/size_16</item>
        <item name="android:paddingStart">@dimen/size_16</item>
        <item name="android:paddingEnd">@dimen/size_16</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">?selectableItemBackground</item>
    </style>

    <style name="Theme.Mahao.ActionBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>