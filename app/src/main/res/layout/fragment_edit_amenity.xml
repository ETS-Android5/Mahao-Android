<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.profile.amenities.single.EditAmenityFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_16"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_editAmenity_amenity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_16"
            app:cardCornerRadius="@dimen/size_8"
            app:cardBackgroundColor="?colorPrimaryVariant"
            android:foreground="?selectableItemBackground">
            <ImageView
                android:id="@+id/imageView_editAmenity_amenity"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_200"
                android:background="?selectableItemBackground"
                android:contentDescription="@string/amenity" />

            <TextView
                android:id="@+id/textView_edictAmenity_noThumbnail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/amenity"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="?colorOnPrimary"/>
        </androidx.cardview.widget.CardView>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout_editAmenity_amenity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_16"
            android:hint="@string/amenity"
            style="@style/Theme.Mahao.FormTextInputLayout"
            app:startIconDrawable="@drawable/ic_baseline_filter_alt_24">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputEditText_editAmenity_amenity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Some text"
                android:inputType="text|textCapWords"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/button_editAmenity_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_24"
            android:layout_marginBottom="@dimen/size_24"
            android:layout_marginStart="@dimen/size_16"
            android:layout_marginEnd="@dimen/size_16"
            style="@style/Theme.Mahao.FormButton"
            android:text="@string/save"/>
    </LinearLayout>


</ScrollView>