<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.profile.ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/layoutViewUser_profile"
                layout="@layout/fragment_view_user"/>

            <LinearLayout
                android:id="@+id/linearLayout_more_privacyPolicy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="?selectableItemBackground">
                <TextView
                    android:id="@+id/textView_more_privacyPolicy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Theme.Mahao.MoreText"
                    android:text="@string/privacy_policy"
                    app:drawableStartCompat="@drawable/ic_baseline_privacy_tip_24"
                    android:drawablePadding="@dimen/size_16"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?colorOnSurface"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayout_more_terms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="?selectableItemBackground">
                <TextView
                    android:id="@+id/textView_more_terms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Theme.Mahao.MoreText"
                    android:text="@string/terms_and_conditions"
                    app:drawableStartCompat="@drawable/ic_baseline_confirmation_number_24"
                    android:drawablePadding="@dimen/size_16"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?colorOnSurface"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayout_more_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="?selectableItemBackground">
                <TextView
                    android:id="@+id/textView_more_about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Theme.Mahao.MoreText"
                    android:text="@string/title_about"
                    app:drawableStartCompat="@drawable/ic_baseline_info_24"
                    android:drawablePadding="@dimen/size_16"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?colorOnSurface"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayout_more_share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="?selectableItemBackground">
                <TextView
                    android:id="@+id/textView_more_share"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Theme.Mahao.MoreText"
                    android:text="@string/share"
                    app:drawableStartCompat="@drawable/ic_baseline_share_24"
                    android:drawablePadding="@dimen/size_16"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?colorOnSurface"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayout_more_rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="?selectableItemBackground">
                <TextView
                    android:id="@+id/textView_more_rate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Theme.Mahao.MoreText"
                    android:text="@string/rate"
                    app:drawableStartCompat="@drawable/ic_baseline_star_rate_24"
                    android:drawablePadding="@dimen/size_16"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?colorOnSurface"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayout_more_licenses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="?selectableItemBackground">
                <TextView
                    android:id="@+id/textView_more_licenses"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Theme.Mahao.MoreText"
                    android:text="@string/licenses"
                    app:drawableStartCompat="@drawable/ic_baseline_description_24"
                    android:drawablePadding="@dimen/size_16"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?colorOnSurface"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout_profile_users"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textView_profile_users"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Theme.Mahao.MoreText"
                    android:text="@string/users" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?colorOnSurface"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayout_profile_categories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textView_profile_categories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Theme.Mahao.MoreText"
                    android:text="@string/categories" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?colorOnSurface"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayout_profile_amenities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textView_profile_amenities"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Theme.Mahao.MoreText"
                    android:text="@string/amenities" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?colorOnSurface"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayout_profile_dummy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textView_profile_dummy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Theme.Mahao.MoreText"
                    android:text="@string/create_dummy_data" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?colorOnSurface"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayout_profile_feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textView_profile_feedback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Theme.Mahao.MoreText"
                    android:text="@string/create_feedbacks" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?colorOnSurface"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/button_profile_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/log_out"
        android:backgroundTint="@android:color/holo_red_dark"
        android:paddingTop="@dimen/size_8"
        android:paddingBottom="@dimen/size_8"
        android:layout_marginTop="@dimen/size_16"
        android:layout_marginBottom="@dimen/size_16"
        android:layout_marginStart="@dimen/size_8"
        android:layout_marginEnd="@dimen/size_8"/>

</LinearLayout>