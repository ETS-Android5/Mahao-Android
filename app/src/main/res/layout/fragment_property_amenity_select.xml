<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.properties.single.PropertyAmenitySelectFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_selectAmenities"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="3"
        tools:listitem="@layout/item_amenity"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_8"
        android:layout_marginEnd="@dimen/size_8"
        android:layout_marginBottom="@dimen/size_32"
        android:orientation="horizontal">
        <Button
            android:id="@+id/button_selectAmenities_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/size_8"
            android:layout_weight="1"
            android:text="@string/cancel"
            android:textColor="?colorSurface"
            android:backgroundTint="@android:color/holo_red_dark"/>

        <Button
            android:id="@+id/button_selectAmenities_done"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/size_8"
            android:text="@string/done"
            android:textColor="?colorSurface"
            android:backgroundTint="@android:color/holo_blue_dark"/>
    </LinearLayout>
</LinearLayout>