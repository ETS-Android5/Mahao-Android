<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.properties.single.PropertyAmenitySelectFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_selectAmenities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="3"
            tools:listitem="@layout/item_amenity"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="?actionBarSize"
            android:layout_gravity="center">

            <LinearLayout
                android:id="@+id/linearLayout_selectAmenities_empty"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_margin="@dimen/size_16"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone">
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/animationView_selectAmenities_empty"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_256"
                    android:layout_margin="@dimen/size_16"
                    app:lottie_rawRes="@raw/no_results"
                    app:lottie_loop="true"
                    app:lottie_autoPlay="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textStyle="bold"
                    android:text="@string/no_categories"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout_selectAmenities_loading"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_margin="@dimen/size_16"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone">
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/animationView_selectAmenities_loading"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_256"
                    android:layout_margin="@dimen/size_16"
                    app:lottie_rawRes="@raw/loading_normal"
                    app:lottie_loop="true"
                    app:lottie_autoPlay="true"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </FrameLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_8"
        android:layout_marginEnd="@dimen/size_8"
        android:layout_marginBottom="@dimen/size_32"
        android:orientation="horizontal">
        <Button
            android:id="@+id/button_selectAmenities_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/size_8"
            android:layout_weight="1"
            android:text="@string/cancel"
            android:textColor="?colorSurface"
            android:backgroundTint="@android:color/holo_red_dark"/>

        <Button
            android:id="@+id/button_selectAmenities_done"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/size_8"
            android:text="@string/done"
            android:textColor="?colorSurface"
            android:backgroundTint="@android:color/holo_blue_dark"/>
    </LinearLayout>
</LinearLayout>