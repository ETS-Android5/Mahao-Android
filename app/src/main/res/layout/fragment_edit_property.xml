<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.properties.single.EditPropertyFragment">

    <include
        android:id="@+id/layout_toolbar"
        layout="@layout/layout_toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?actionBarSize">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_8"
            android:layout_marginStart="@dimen/size_16"
            android:layout_marginEnd="@dimen/size_16"
            android:layout_marginBottom="@dimen/size_16"
            android:orientation="vertical">
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout_editProperty_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_16"
                android:hint="@string/property_name"
                style="@style/Theme.Mahao.FormTextInputLayout"
                app:startIconDrawable="@drawable/ic_baseline_location_city_24">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInputEditText_editProperty_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Some property name"
                    android:inputType="text|textCapWords"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout_editProperty_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_16"
                android:hint="@string/category"
                style="@style/Theme.Mahao.FormTextInputLayout"
                app:startIconDrawable="@drawable/ic_baseline_filter_alt_24">
                <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                    android:id="@+id/autoCompleteTextView_editProperty_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Bedsitters"
                    android:completionThreshold="0"
                    style="@style/Widget.MaterialComponents.AutoCompleteTextView.FilledBox"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout_editProperty_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_16"
                android:hint="@string/location"
                style="@style/Theme.Mahao.FormTextInputLayout"
                app:startIconDrawable="@drawable/ic_baseline_location_on_24">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInputEditText_editProperty_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="The location and coordinates"
                    android:inputType="text|textCapWords"/>
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayout_editProperty_beds"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/size_16"
                    android:layout_marginEnd="@dimen/size_8"
                    android:hint="@string/bed"
                    style="@style/Theme.Mahao.FormTextInputLayout"
                    app:startIconDrawable="@drawable/ic_baseline_king_bed_24">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/textInputEditText_editProperty_beds"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="3"
                        android:inputType="number"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayout_editProperty_baths"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/size_16"
                    android:layout_marginStart="@dimen/size_8"
                    android:hint="@string/bath"
                    style="@style/Theme.Mahao.FormTextInputLayout"
                    app:startIconDrawable="@drawable/ic_baseline_bathtub_24">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/textInputEditText_editProperty_baths"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="1"
                        android:inputType="number"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout_editProperty_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_16"
                android:hint="@string/price"
                style="@style/Theme.Mahao.FormTextInputLayout"
                app:startIconDrawable="@drawable/ic_baseline_attach_money_24">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInputEditText_editProperty_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="5000"
                    android:inputType="numberDecimal"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout_editProperty_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_16"
                android:hint="@string/description"
                style="@style/Theme.Mahao.FormTextInputLayout">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInputEditText_editProperty_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Some property name"
                    android:gravity="top"
                    android:minLines="6"
                    android:inputType="text|textCapSentences|textMultiLine"/>
            </com.google.android.material.textfield.TextInputLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView_editProperty_featureImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_16"
                app:cardCornerRadius="@dimen/size_8"
                app:cardBackgroundColor="?colorPrimaryVariant"
                android:foreground="?selectableItemBackground">
                <ImageView
                    android:id="@+id/imageView_editProperty_featureImage"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_200"
                    android:background="?selectableItemBackground"
                    android:contentDescription="@string/feature_image" />

                <TextView
                    android:id="@+id/textView_editProperty_noThumbnail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/feature_image"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textColor="?colorOnPrimary"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_16"
                android:textAppearance="?android:textAppearanceLarge"
                android:text="@string/amenities"
                android:visibility="gone"/>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView_editProperty_amenities"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_8"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="horizontal"
                    tools:listitem="@layout/item_category"/>

                <LinearLayout
                    android:id="@+id/linearLayout_editProperty_emptyAmenities"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_200"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_margin="@dimen/size_16"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="gone">
                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/animationView_editProperty_emptyAmenities"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_256"
                        android:layout_margin="@dimen/size_16"
                        app:lottie_rawRes="@raw/home_logo"
                        app:lottie_loop="true"
                        app:lottie_autoPlay="true" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:textStyle="bold"
                        android:text="@string/no_amenities"
                        android:layout_gravity="center"/>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/linearLayout_editProperty_loadingAmenities"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_200"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_margin="@dimen/size_16"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="gone">
                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/animationView_editProperty_loadingAmenities"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/size_16"
                        app:lottie_rawRes="@raw/home_logo"
                        app:lottie_loop="true"
                        app:lottie_autoPlay="true"
                        android:layout_gravity="center"/>
                </LinearLayout>
            </FrameLayout>

            <Button
                android:id="@+id/button_editProperty_editAmenities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_8"
                android:layout_marginStart="@dimen/size_32"
                android:layout_marginEnd="@dimen/size_32"
                android:text="@string/edit_amenities"
                android:visibility="gone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_16"
                android:textAppearance="?android:textAppearanceLarge"
                android:text="@string/gallery"
                android:visibility="gone"/>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView_editProperty_gallery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/size_8"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="horizontal"
                    tools:listitem="@layout/item_gallery"/>

                <LinearLayout
                    android:id="@+id/linearLayout_editProperty_emptyGallery"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_200"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_margin="@dimen/size_16"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="gone">
                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/animationView_editProperty_emptyGallery"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_256"
                        android:layout_margin="@dimen/size_16"
                        app:lottie_rawRes="@raw/home_logo"
                        app:lottie_loop="true"
                        app:lottie_autoPlay="true" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:textStyle="bold"
                        android:text="@string/no_images"
                        android:layout_gravity="center"/>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/linearLayout_editProperty_loadingGallery"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_200"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_margin="@dimen/size_16"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="gone">
                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/animationView_editProperty_loadingGallery"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/size_16"
                        app:lottie_rawRes="@raw/home_logo"
                        app:lottie_loop="true"
                        app:lottie_autoPlay="true"
                        android:layout_gravity="center"/>
                </LinearLayout>

            </FrameLayout>

            <Button
                android:id="@+id/button_editProperty_addGalleryImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_8"
                android:layout_marginStart="@dimen/size_32"
                android:layout_marginEnd="@dimen/size_32"
                android:text="@string/add_gallery_image"
                android:visibility="gone"/>

            <Button
                android:id="@+id/button_editProperty_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_24"
                android:layout_marginBottom="@dimen/size_24"
                android:layout_marginStart="@dimen/size_16"
                android:layout_marginEnd="@dimen/size_16"
                style="@style/Theme.Mahao.FormButton"
                android:text="@string/save"/>
        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:id="@+id/linearLayout_editProperty_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/size_16"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationView_editProperty_loading"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_256"
            android:layout_margin="@dimen/size_16"
            app:lottie_rawRes="@raw/loading_normal"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"
            android:layout_gravity="center"/>
    </LinearLayout>
</FrameLayout>